{
  "name": "calebmsmith-linktree",
  "version": "1.0.0",
  "description": "Personal linktree for Caleb Smith - Student, Writer, Developer",
  "main": "index.html",
  "scripts": {
    "dev": "npx live-server --port=3000 --entry-file=index.html",
    "build": "echo 'Static site - no build step required'",
    "predeploy": "echo 'Preparing for deployment...'",
    "deploy": "gh-pages -d . --exclude 'node_modules/**' --exclude 'package*.json' --exclude '.git/**' --exclude 'README.md'",
    "deploy:clean": "gh-pages -d . --exclude 'node_modules/**' --exclude 'package*.json' --exclude '.git/**' --exclude 'README.md' --remove '*.html' --remove '*.css' --remove '*.js' --remove '*.jpg' --remove '*.png' --remove '*.webp'",
    "start": "npm run dev",
    "test": "echo 'No tests specified'",
    "lint": "echo 'Linting HTML, CSS, and JS files...' && npx htmlhint *.html && npx stylelint *.css",
    "validate": "npx html-validate *.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calebmsmith/linktree.git"
  },
  "keywords": [
    "linktree",
    "personal-website",
    "static-site",
    "portfolio",
    "github-pages"
  ],
  "author": "Caleb Smith",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^6.1.1",
    "live-server": "^1.2.2",
    "htmlhint": "^1.1.4",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "html-validate": "^8.7.4"
  },
  "homepage": "https://calebmsmith.github.io/linktree/",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
} 